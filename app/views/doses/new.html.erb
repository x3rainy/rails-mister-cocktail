<body>
  <%= render 'shared/navbar' %>
  <%= render 'shared/banner', cocktail: @cocktail %>

  <div class="container p-3">
    <h1>Add doses</h1>

    <%= simple_form_for([@cocktail, @dose]) do |f| %>
      <%= f.input :description %>
      <%= f.association :ingredient %>
      <%= f.button :submit, class: "btn btn-primary" %>
    <% end %>
  </div>
</body>

